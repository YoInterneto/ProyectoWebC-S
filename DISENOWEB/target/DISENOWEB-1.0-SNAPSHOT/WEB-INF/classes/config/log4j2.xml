            <DefaultRolloverStrategy max="20"/>
        </RollingFile>		
        <!-- LOGDB -->
        <RollingFile name="LogFileDB" fileName="C:\Users\Alberto\OneDrive\Documentos\GitHub\ProyectoWebC-S\DISENOWEB/log/LogBD.log"
