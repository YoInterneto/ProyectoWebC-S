<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>				
        <!-- LOG -->
        <RollingFile name="LogFile" fileName="C:\Users\Alberto\OneDrive\Documentos\GitHub\ProyectoWebC-S\DISENOWEB/log/LogBD.log"
                             filePattern="/log/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.logBd.gz">
